<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListBluetooth">


    <TextView
        android:id="@+id/insurance2"
        android:layout_width="208dp"
        android:layout_height="61dp"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Click here to search the car Bluetooth !"
        android:textAlignment="center"
        android:textColor="#646464"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/simpleListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:divider="@color/material_blue_grey_800"
        android:dividerHeight="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchbluetooth"
        app:layout_constraintVertical_bias="0.37"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/searchbluetooth"
        android:layout_width="173dp"
        android:layout_height="204dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/blt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/insurance2" />

</androidx.constraintlayout.widget.ConstraintLayout>