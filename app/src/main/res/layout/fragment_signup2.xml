<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9F9F9F"
    android:backgroundTint="#F8F8F8"
    tools:context=".Signup2Fragment">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressTint="#000000"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Driving license"
        android:textColor="#000000"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/takephoto"
        android:layout_width="202dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#0FFFFFFF"
        android:drawablePadding="0dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Take a picture"
        android:textAllCaps="false"
        android:textColor="#6D6E71"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        app:icon="@android:drawable/ic_menu_camera"
        app:iconPadding="0dp"
        app:iconSize="50dp"
        app:iconTint="#414141"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView24" />

    <Button
        android:id="@+id/signup"
        android:layout_width="250dp"
        android:layout_height="58dp"
        android:layout_marginBottom="16dp"
        android:width="250dp"
        android:height="59dp"
        android:backgroundTint="#37A590"
        android:text="Sign up"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagedriving" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="252dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Take a picture of your driving license "
        android:textAlignment="center"
        android:textColor="#6D6E71"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView23" />

    <ImageView
        android:id="@+id/imagedriving"
        android:layout_width="280dp"
        android:layout_height="352dp"
        android:src="@drawable/permis"  android:adjustViewBounds="true"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/takephoto" />

</androidx.constraintlayout.widget.ConstraintLayout>